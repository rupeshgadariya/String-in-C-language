// Write a function to reverse a string. 
#include<stdio.h>
#include<conio.h>
#include<string.h>
    void rev(char str[], int n)
{   int i,j;
    char ch[n];

 strcpy(ch,str);
 for( i=0; i<n; i++)
  if( ch[i]==0 )
    break;

   for( j=0; j<n; j++)
   { str[j] = ch[i-1];
     i--;
     if(i==0) break;
     }
       str[j+1]='\0';

}
        
 int main()
 {
    char ab[20]="hello me";
    printf("%s\n",ab);
    rev(ab,50);
    printf("%s\n",ab);

 }  
