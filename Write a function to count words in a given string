// Write a function to count words in a given string 
#include<stdio.h>
#include<conio.h>

    int count(char str[])
{
        int i,count=0;
    for(i=0; str[i]; i++)
     if((str[i]>='a' && str[i]<='z') ||
        (str[i]>='A' && str[i]<='Z') || 
        (str[i]>='0' && str[i]<='9') )
      {    
          count++;
          for(; str[i]; i++)
          if(str[i]==' ' || str[i]=='\n' || str[i]==',')
            break;
        }    
     
      return count; 
}
   


int main()
{
    char str[50];
    fgets(str,50,stdin);
printf("%d",count(str));

    return 0;
}
