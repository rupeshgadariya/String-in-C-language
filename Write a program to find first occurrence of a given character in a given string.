// Write a program to find first occurrence of a given character in a given string.
#include<stdio.h>
#include<conio.h>
#include<string.h>
    void main()
{
        int i;
    char str[20],ch;

    printf("Enter a string ");
    fgets(str,20,stdin);
    printf("Enter a character ");
    scanf("%c",&ch);
 
 if( ch>='A' && ch<='Z' )
 { strupr(str);
    for (i=0; i<20; i++)
     if(ch==str[i])
      break;
 } 

 else  
  { strlwr(str);
    for (i=0; i<20; i++)
     if(ch==str[i])
      break;
 } 
    printf("index is %d ",i);

    getch();
}
