// Write a function to check whether a given string is palindrome or not
#include<stdio.h>
#include<conio.h>
#include<string.h>
    int palin(char str[], int n)
{
    char temp[n],rev[n];
    int j=0;

        for (int i = 0; str[i]; i++)
         if( (str[i]>='a' && str[i]<='z') || (str[i]>='A' && str[i]<='Z'))
          {
             temp[j] = str[i];
             j++;
          } 
        temp[j]=0;
       
     strlwr(temp);

     for (int i = 0; temp[i]; i++)
     {
        rev[i] = temp[j-1];
        j--;
     }
     
    for (int i = 0; temp[i]; i++)
     if(temp[i]!=rev[i])
       return 0;
    
    return 1;
}


int main()
{
    char str[20]="Madam ;";
  fgets(str,20,stdin);
   printf("%d yes ",palin(str,20));
}
