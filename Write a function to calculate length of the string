// Write a function to calculate length of the string 
#include<stdio.h>
#include<conio.h>

    int len(char ch[], int n)
{  
    int i;
     
     for ( i = 0; i < n; i++)
      if(ch[i]==0)
        return i;
       
  return 0;
}

int main()
{
    char str[50]="my name is rupesh kumar";
    printf("%d",len(str,50));
}
