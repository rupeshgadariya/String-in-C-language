// Write a program to count spaces in a given string. 
#include<stdio.h>
#include<conio.h>

    void main()
{
        char str[40];       int count=0;
        printf("Enter string \n");
        fgets(str,40,stdin);
        for (int i = 0; str[i]; i++)
        if(str[i]==' ')
            count++;
        
        printf("you enter space key %d time",count);        
        
    getch();
}
